@{ ViewData["Title"] = "Show Car"; }
@model CarsCatalog.Models.CarModel

<div class="container">
    <h3>@Model.CarMake.Name @Model.Name</h3>
    <main role="main" class="pb-3">
        <div class="container">
            <div class="row">
                <div id="car-photos-carousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="@Model.Photo">
                        </div>

                        @foreach (var Photo in Model.Photos)
                        {
                            <div class="carousel-item">
                                <img class="d-block w-100" src="@Photo.Path" alt="Third slide">
                            </div>
                        }
                        @*<div class="carousel-item">
            <img class="d-block w-100" src="img/sliders/1.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="img/sliders/3.jpeg" alt="Third slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="img/sliders/3.jpg" alt="Third slide">
        </div>*@
                    </div>

                    <a class="carousel-control-prev" href="#car-photos-carousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#car-photos-carousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>

            <div class="row car-article-row">
                <article>
                    @Html.Raw(@Model.Description)
                </article>
            </div>

            <div class="row comments-row">
                <h4>Коментари</h4>
            </div>

            <div id="car-comments-form-wrapper" class="form-group">
                <form id="add-comment-form" action="@Url.RouteUrl("post_a_comment")">
                    <input type="hidden" name="car_model_id" value="@Model.Id" />
                    <textarea class="form-control" rows="4" placeholder="Споделете своето мнение и опит за модела тук:"></textarea>
                    <button type="submit" class="btn btn-primary">Изпрати</button>
                </form>
            </div>

            <div id="latest-comments-wrapper">
                <div class="row">
                    <h5>Последни</h5>
                </div>

                <div id="comments-list">
                    @foreach (var Comment in @Model.Comments)
                    {
                        <div class="row">
                            <h6>На @Comment.CreatedDate.ToString("dd.MM.yyyy") г.</h6>
                        </div>
                        <div class="row single-comment-description">
                            @Comment.Description
                        </div>
                    }
                </div>
            </div>
        </div>
    </main>
</div>
